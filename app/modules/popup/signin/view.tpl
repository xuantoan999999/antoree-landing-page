<div class="form-login mfp-hide bzPopup bzPopupAnimation" id="popupFormLogin">
	<form name="frmLogin">
		<a href="" class="btn-reg"><img src="images/button-login-facebook.png" class="img-responsive"></a>
		<a href="" class="btn-reg"><img src="images/button-login-google.png" class="img-responsive"></a>
		<hr class="or" />
		<p class="or">Hoặc</p>
		<div class="form-group">
			<input name="email" type="text" class="form-control" id="exampleInputEmail" placeholder="Địa chỉ emai" required />
			<p class="message-error" id="message-email" class="message-error">Email không hợp lệ</p>
		</div>
		<div class="form-group">
			<input name="password" type="password" class="form-control" id="exampleInputPass" placeholder="Mật khẩu" required />
			<p class="message-error" id="message-email" class="message-error">Bạn chưa nhập password</p>
		</div>
		<label class="float-left helper"><input type="checkbox"/>Ghi nhớ đăng nhập</label>
		<a href="" class="float-right helper">Quên mật khẩu?</a>
		<input id="btDangKyBanner" class="btn btn-default bg-onrange register" type="submit" value="đăng nhập">
		<hr style="margin-top: 40px;" />
		<p class="have-account">Chưa có tài khoản? <a href="">Đăng ký</a></p>
	</form>
</div>