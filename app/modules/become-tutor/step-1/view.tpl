<div id="mod-step-1" class="become-tutor-commom">
	<div class="container">
		<div class="content">

			<div class="header">
				<h2 class="h2Title">
					Become an antoree tutor
				</h2>
				<p >
					Perform the followings steps to get an online tutor position in Antoree community
				</p>
			</div>

			<div class="step-list">
				<div class="step active">
					<div class="number">
						1
					</div>
					<div class="info">
						Personal information
					</div>
				</div>
				<div class="float-left step-list-arrow unactive images-active">
				</div>
				<div class="step">
					<div class="number">
						2
					</div>
					<div class="info">
						Teaching informations
					</div>

				</div>
				<div class="float-left step-list-arrow images-active"></div>
				<div class="step step-final">
					<div class="number">
						3
					</div>
					<div class="info">
						Confirmation
					</div>
					
				</div>
				<div class="clearfix"></div>
			</div>

			<form action="" id="register">
				<div class="avatar row">
					<div class="col-sm-4 images">
						<img src="images/avatar-become-tutor.png" alt="">
					</div>
					<div class="col-sm-8 text">
						<p>
							Please choose your best photo. First impression is very important in making learners choose you as their tutors
						</p>
						<div class="file-upload">
							<span>Upload an avatar</span>
							<input type="file" class="upload">
						</div>
						<p id="avatar-alert">
							You must upload an avatar
						</p>
					</div>
				</div>

				<div class="infomations-group row">
					<div class="info col-sm-8">
						<p class="head">
							Birthday
						</p>
						<div class="form-group">
							<input type="text" placeholder="00/00/000" class="birthday" id="birthdayTxt">
						</div>
					</div>
					<div class="info col-sm-4">
						<p class="head">
							Gender
						</p>
						<select class="select form-group s1" id="gender-select">
							<option value="" disabled selected style="display: none;">Male/female</option>
							<option value="0">Male</option>
							<option value="1">Female</option>
						</select>
					</div>
					<div class="info col-sm-8">
						<p class="head">
							Phone number
						</p>
						<div class="form-group">
							<select class="select s2" id="nation-select">
								<option value="" disabled selected style="display: none;">Nationality</option>
								<option value="vn">VN</option>
								<option value="usa">USA</option>
								<option value="cnd">Canada</option>
								<option value="cn">China</option>
								<option value="iran">Iran</option>
							</select>
							<span class="stick"></span>
							<input type="text" placeholder="Phone number" class="phone-number" id="phonenumberTxt">
						</div>
					</div>
					<div class="info col-sm-4">
						<p class="head">
							Nationtality
						</p>
						<select id="nation-select2" class="select form-group s1">
							<option value="" disabled selected style="display: none;">Your nationality</option>
							<option value="vn">VN</option>
							<option value="usa">USA</option>
							<option value="cnd">Canada</option>
							<option value="cn">China</option>
							<option value="iran">Iran</option>
						</select>
					</div>
					<div class="clearfix"></div>
				</div>
				<div class="facebook">
					<p class="head">
						Your Facebook URL
					</p>
					<div class="form-group">
						<input type="text" id="facebookTxt">
					</div>
				</div>
				<div class="next text-right">
					<input type="submit" class="btn-submit" value="CONTINUE >">
				</div>
			</form>
		</div>
	</div>
</div>